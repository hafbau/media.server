      "ref": "origin/master",
      "repo": "git@github.com:hafbau/media.server.git",
      "path": "/home/sb/media",
      "post-deploy": "npm install && pm2 startOrGracefulReload package.json --env production",
      "env": {
        "NODE_ENV": "production"
      }
    }
