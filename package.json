  "dependencies": {
    "bcrypt": "^1.0.3",
    "caminte": "^0.4.0",
    "content-disposition": "^0.5.2",
    "jsonwebtoken": "^7.4.1",
    "kcors": "^2.2.1",
    "koa": "^2.3.0",
    "koa-body": "^2.3.0",
    "koa-helmet": "^3.2.0",
    "koa-morgan": "^1.0.1",
    "koa-router": "^7.2.1",
    "mongoose": "^4.11.12",
